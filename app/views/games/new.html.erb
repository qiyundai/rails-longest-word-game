<h1><%= @letters.join(" ") %></h1>

<form action="score" method="post">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <input type="text" name="word" placeholder="What's the longest word you can find?">
    <input type="submit" value="play">
    <input id="letters" name="letters" type="hidden" value="<%= @letters %>">
</form>